{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "static/$1" },
    { "src": "/(.*)", "dest": "app.py" }
  ],
  "includeFiles": [
    "static/**/*",
    "db.py",
    "rule_engine.py"
  ]
}
